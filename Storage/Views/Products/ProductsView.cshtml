@model ProductViewModel
@{
    ViewData["Title"] = "ProductsView";
}

<h1>ProductsView</h1>

<p>
    <a asp-action="ProductsView">Create New</a>
</p>
<form asp-action="ProductsFilter">
    <input type="text" name="searchString" asp-for="Name" placeholder="Filter by Category" />
    <button type="submit" class="btn btn-primary mb-2">Search</button>
    <select class="form-control" asp-for="Categories" asp-items="@Html.GetEnumSelectList<Category>()">
        <option selected="selected" value="">Please select</option>
    </select>
</form>
