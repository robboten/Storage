@model IEnumerable<ProductViewModelAlt>

@{
    ViewData["Title"] = "Storage";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CategoryDb.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryValue)
                </td>
@*                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryDb.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
